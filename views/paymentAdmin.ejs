    </header>
    <!-- END header -->

    <section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url(https://s3-qlks-demo.s3-ap-southeast-1.amazonaws.com/big_image_1.jpg);">
      <div class="container">
        <div class="row align-items-center site-hero-inner justify-content-center">
          <div class="col-md-12 text-center">

            <div class="mb-5 element-animate">
              <h1>Trả phòng</h1>
            </div>

          </div>
        </div>
      </div>
    </section>
    <!-- END section -->

    <section class="site-section">
		<div class="container">
			<div class="row">
				<div class="col-md-6">  
					<form action="#" method="post">			
				
                <h3 class="mb-5">THANH TOÁN TIỀN PHÒNG</h3>
                <div>
                  <% if (error){ %>

                    <div class="alert alert-light" role="alert">
                      <%= error %>
                    </div>
                   
                  <% } %>
                </div>
                <div class="media d-block room mb-0">             
				  <div class="media-body">
          <label for="">Số phòng</label>
          <select name="sophong" id="sophong" class="form-control" onchange="myFunction(event)">
            <option selected disabled>Chọn phòng</option>
              <% if(room){ %>
                <% for(var i=0; i < room.length; i++) { %>
                  <option value="<%= room[i].room %>"><%= room[i].room %></option>
                <% } %>
              <% } else{ %>  
                <option value="">Ko có phòng đang thuê</option>
              <% } %>
          </select>
					  
				  </div>
            	</div>
				
				<hr>
				<div class="row">
					<div class="col-md-12 form-group">
						   <label for="tienphong">Tiền phòng</label>
						   <input type="text" id="tienphong" name="tienphong" class="form-control " readonly="readonly">		
                    </div>
				</div>	
                <div class="row">
                      <% if (error){ %>

                        <div class="alert alert-light" role="alert">
                          <%= error %>
                        </div>
                       
                      <% } %>
                </div>
                  <input type="hidden" name="idphieu" id="idphieu">
                  <div class="row">
                      <div class="col-sm-6 form-group">
                          <label for="">Ngày đến</label>
                          <div style="position: relative;">
                            <span class="fa fa-calendar icon" style="position: absolute; right: 10px; top: 10px;"></span>
                            <input type="text" class="form-control" id="arrival_date" name="arrival_date"  readonly="readonly"/>
                          </div>
                      </div>

                      <div class="col-sm-6 form-group">
						<label for="">Ngày đi</label>
                        <div style="position: relative;">
                        	<span class="fa fa-calendar icon" style="position: absolute; right: 10px; top: 10px;"></span>
                            <input type="text" class="form-control" id="departure_date" readonly="readonly"/>
                        </div>
				  	  </div>                    
                  </div>
				  
				  
                      
                  <div class="row">


                    <div class="col-md-6 form-group">
                      <label for="sokhach">Số khách</label>
                      <input type="text" class="form-control" id="sokhach" readonly="readonly"/>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-12 form-group">
                      <label for="message">Ghi chú</label>
                      <textarea name="message" id="message" class="form-control " cols="30" rows="8"readonly="readonly"></textarea>
                    </div>
                  </div>
				  
                  <div class="row">
						<div class="col-md-5 form-group">
							  <input type="submit" value="Thanh toán" id="thanhtoan" class="btn btn-primary">
						</div>
					</div>
                </form>
				</div>

				<div class="col-md-1"></div>
				<div class="col-md-5">
					<h3><center>KHUYẾN MÃI HOT</center></h3>
					<br>
					<img src="https://s3-qlks-demo.s3-ap-southeast-1.amazonaws.com/hotel_sale.jpg" alt="Image placeholder" class="img-fluid">
				</div>
							
			</div>			  
		</div>
    </section>
    <!-- END section -->

    
    <!-- loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214"/></svg></div>

    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/jquery-migrate-3.0.0.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.waypoints.min.js"></script>
    <script src="js/jquery.stellar.min.js"></script>

    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/magnific-popup-options.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js"></script>

    <script>
      
      $('#arrival_date, #departure_date').datepicker({});

    </script>

<script type='text/javascript'>
      var room = '<%- JSON.stringify(room) %>';
      var room1= JSON.parse(room);
      function myFunction(e) {
         for (var i=0; i < room1.length; i++) {
           if (room1[i].room === document.getElementById("sophong").value) {
             document.getElementById("arrival_date").value = room1[i].checkin;
             document.getElementById("departure_date").value = room1[i].checkout;
             document.getElementById("sokhach").value = room1[i].cusNum;
             document.getElementById("message").value = room1[i].message;
             document.getElementById("tienphong").value = room1[i].price;
             document.getElementById("idphieu").value = room1[i].id;
           }
         }
      }
    </script>

    

    <script src="js/main.js"></script>
  </body>
</html>