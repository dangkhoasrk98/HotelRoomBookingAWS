    <section class="site-section">
      <div class="container">
        <div class="row">
			<div class="col-md-6">
				<form action="#" method="post">
				<h2 class="mb-5">Phiếu đăng ký</h2>
                
                  <div class="row">
                      <% if (error){ %>

                        <div class="alert alert-light" role="alert">
                          <%= error %>
                        </div>
                       
                      <% } %>
                  </div>
                  <div class="row">
                    <div class="col-md-12 form-group">
                      <label for="hoten">Họ tên khách hàng</label>
                      <input type="text" id="hoten" name="name" class="form-control" required>
                    </div>
                  </div>
				  
				          <div class="row">
                    <div class="col-md-12 form-group">
                      <label for="hoten">Địa chỉ</label>
                      <input type="text" id="cmnd" name="address" class="form-control" required>
                    </div>
                  </div>

                  <div class="row">
                      <div class="col-md-12 form-group">
                        <label for="sodienthoai">Số điện thoại</label>
                        <input type="text" id="sodienthoai" name="phone" class="form-control" required>
                      </div>
                      
					  
                  </div>
                  <div class="row">
                    <div class="col-md-12 form-group">
                      <label for="email">Email</label>
                      <input type="email" id="email" class="form-control" name="email" required>
                    </div>
                  </div>
                  <div class="row">
                      <div class="col-sm-6 form-group">
                          <label for="">Ngày đến</label>
                          <div style="position: relative;">
                            <span class="fa fa-calendar icon" style="position: absolute; right: 10px; top: 10px;"></span> 
                            <input type="text" class="form-control" id="arrival_date" name="checkin" />
                          </div>
                      </div>
					
					
                      <div class="col-sm-6 form-group">
                          <label for="">Ngày đi</label>
                        <div style="position: relative;">
                        	<span class="fa fa-calendar icon" style="position: absolute; right: 10px; top: 10px;"></span>
                            <input type="text" class="form-control" id="departure_date" name="checkout" />
							
                        </div>      
                      </div>
                    
                  </div>
				  
				  <script type="text/javascript"> 
						function formatDate(date) {
						  var hours = date.getHours();
						  var minutes = date.getMinutes();
						  minutes = minutes < 10 ? '0'+minutes : minutes;
						  var strTime = hours + ':' + minutes + ' ' ;
						  return date.getMonth()+1 + "/" + date.getDate() + "/" + date.getFullYear() ;
						}

						var d = new Date();
						var e = formatDate(d);
							document.getElementById('arrival_date').value = e;
							
							function formatDate2(date) {
						  var hours = date.getHours();
						  var minutes = date.getMinutes();
						  minutes = minutes < 10 ? '0'+minutes : minutes;
						  var strTime = hours + ':' + minutes + ' ' ;
						  return date.getMonth()+1 + "/" + date.getDate() + "/" + date.getFullYear() ;
						}						
					</script>
		  
                    
                  <div class="row">
                    <div class="col-md-6 form-group">
                      <label for="roomId">Phòng</label>
                      <select name="roomId" id="roomId" class="form-control" onchange="myFunction(event)">
					  <option selected disabled>Chọn phòng</option>
                          <% if(room){ %>
                            <% for(var i=0; i < room.length; i++) { %>
                              <option value="<%= room[i].id %>"><%= room[i].id %></option>
                            <% } %>
                          <% } else{ %>  
                            <option value="">Ko còn phòng trống</option>
                          <% } %>
                      </select>  
                    </div>

                    <div class="col-md-6 form-group">
                      <label for="sokhach">Số khách</label>
                      <select name="sokhach" id="sokhach" class="form-control" onchange="myFunction(event)">
                        <option value="1">1 Guest</option>
                        <option value="2">2 Guests</option>
                        <option value="3">3 Guests</option>
                        <option value="4">4 Guests</option>
                      </select>
                    </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-md-12 form-group">
                      <label for="message">Ghi chú</label>
                      <textarea name="message" id="message" class="form-control " cols="30" rows="8" required></textarea>
                    </div>
                  </div>
				  
				  <div class="row">
                    <div class="col-md-12 form-group">
                      <label for="tienphong"><h4>Tiền phòng</h4></label>
                      <input type="text" id="tienphong" name="price" class="form-control " readonly="readonly">
                    </div>
                  </div>
				  
                  <div class="row">
                    
                    <div class="col-md-6 form-group">
                        <%if (room) { %>
                          <input type="submit" value="Xác nhận" class="btn btn-primary">
                        <% } %>
                        
                    </div>
                  </div>
                </form>
            </div>
			
			<div class="col-md-1"></div>
			<div class="col-md-5">
				<h3><center>KHUYẾN MÃI HOT</center></h3>
				<br>
				<img src="https://s3-qlks-demo.s3-ap-southeast-1.amazonaws.com/hotel_sale.jpg" alt="Image placeholder" class="img-fluid">
			</div>
             
        </div>
      </div>
